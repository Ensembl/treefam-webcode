		slider.width( num * slideWidth );
		
		// center the arrows and add click event
		jQuery(".arrow").height(
			slider.height()
		).click( function(){
			slideTo( jQuery(this).attr("rel") );
			return false;
		} );
		
		// build the controller
		for( i=0; i<num; i++ ){
			var li = jQuery('<li><a href="#"></a></li>');
			li.click(function(){
				slideTo( jQuery(this).index() );
				return false;
			}).appendTo(sliderController);
