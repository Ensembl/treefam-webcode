<!-- start sequence search block -->

<div class="block" id="searchSequenceBlock">
  <div class="handle">
    <h1>Sequence search</h1>
  </div>
  <div class="blockContent">

    <p>
      Find TreeFam families within your sequence of interest. Paste your
      protein sequence into the box below, to have it searched for 
      matching TreeFam families. 
    </p>   

      <hr />
    </div>

    <div class="formWrapper">

      [% IF seqSearchError %]
      <div class="error">
        <h2>Error</h2>
        [% seqSearchError %]
      </div>
      [% END %]
      
      <form method="post" 
            id="proteinSeqSearchForm"
            action="[% c.uri_for( "/search/sequence" ) %]"
            enctype="multipart/form-data">

        <div class="row">
          <label for="seq">Sequence</label>
          <textarea cols="60" 
                    rows="10"
                    name="seq"
                    id="seq"> Enter Sequence</textarea>
        </div>
  
        <div class="row">
          <label class="blankLabel">Submit</label>
           <input class="submit" 
                 type="submit" 
                 name="submit" 
                 value="Submit"
                 onclick="if(!$('seq').present()){return false};"/> 
          <input class="reset"
                 type="reset"
                 name="reset"
                 value="Reset" />
          <input class="example" 
                 type="button"
                 value="Example" 
                 onclick="$('seq').value=exSeq;" />
        </div>

      </form>
      
      <div class="cleaner"><!-- empty --></div>
